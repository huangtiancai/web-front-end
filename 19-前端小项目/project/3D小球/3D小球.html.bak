<!doctype html>
<html>
 <head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta name="Keywords" content="关键词,关键词">
  <meta name="Description" content="">
  <title>3D小球 --krry</title>
  <style type="text/css">
    *{margin:0;padding:0}
	 body{background:#000;}
	.wrap,.x,.y,.z{width:200px;height:200px;border-radius:50%;}
			.x1,.x2,.y1,.y2,.z1,.z2{width:87.5%;height:87.5%;border-radius:50%;}
			.x1,.x2,.y1,.y2,.z1,.z2,.y,.z,.xInner,.yInner,.zInner{position:absolute;}

			.x{border:1px solid #66ffff;transform-style:preserve-3d;position:relative;
			animation:play 2s linear infinite;}
			.y{border:1px solid #333333;top:0;left:0;transform:rotateX(90deg);}
			.z{border:1px solid #1de2bf;top:0;left:0;transform:rotateY(90deg);}
			
			.x1{border:1px solid #ffff00;top:6.25%;left:6.25%;transform:translateZ(50px);}
			.x2{border:1px solid #3300ff;top:6.25%;left:6.25%;transform:translateZ(-50px);}
			
			.y1{border:1px solid #71bd3e;top:6.25%;left:6.25%;transform:rotateX(90deg) translateZ(50px);}
			.y2{border:1px solid #3300ff;top:6.25%;left:6.25%;transform:rotateX(90deg) translateZ(-50px);}

			.z1{border:1px solid #71bd3e;top:6.25%;left:6.25%;transform:rotateY(90deg) translateZ(50px);}
			.z2{border:1px solid #3300ff;top:6.25%;left:6.25%;transform:rotateY(90deg) translateZ(-50px);}

			.xInner{border:1px solid #ff0033;top:50%;width:100%;}
			.yInner{border:1px solid #ffff33;top:50%;width:100%;transform:rotateX(90deg);}
			.zInner{border:1px solid #993399;top:50%;width:100%;transform:rotateY(90deg);}
			
			@keyframes play{
				100%{ transform: rotateX(360deg) rotateY(360deg);}
			}
  </style>
 </head>
 <body>
   <div class="wrap">
      <div class="x">
			<div class="x1"></div>
			<div class="x2"></div>
			<div class="xInner"></div>
			<div class="y"></div>
			<div class="y1"></div>
			<div class="y2"></div>
			<div class="yInner"></div>
			<div class="z"></div>
			<div class="z1"></div>
			<div class="z2"></div>
			<div class="zInner"></div>
	  </div>
   </div>
 </body>
</html>
